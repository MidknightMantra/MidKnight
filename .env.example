# ═══════════════════════════════════════════════════════════════
# MIDKNIGHT - Environment Variables
# Copy this file to .env and fill in your values
# ═══════════════════════════════════════════════════════════════

# ─── SESSION ───────────────────────────────────────────────────
# Get this from your session generator website
# Format: Vesperr~PASTEBIN_CODE
SESSION_ID=

# ─── BOT SETTINGS ──────────────────────────────────────────────
BOT_NAME=Midknight
PREFIX=.

# Your phone number(s) - comma separated for multiple owners
# Example: 254700000000,254711111111
OWNER_NUMBER=254700000000

# Bot mode: public, private (owner only), groups (groups only)
BOT_MODE=public

# ─── FEATURES ──────────────────────────────────────────────────
# Auto-read incoming messages
AUTO_READ=false

# Show typing indicator when processing
AUTO_TYPING=true

# React with emoji on command execution
AUTO_REACT=true

# Reject incoming calls
ANTI_CALL=false

# ─── API KEYS (Optional - for enhanced features) ──────────────
# OpenAI API key for AI plugin
OPENAI_API_KEY=

# Google Gemini API key for AI and vision
GEMINI_API_KEY=

# ─── LIMITS ────────────────────────────────────────────────────
# Maximum download size in MB
MAX_DOWNLOAD_SIZE=100

# ─── SECURITY ──────────────────────────────────────────────────
# Encryption key for session storage (RECOMMENDED for production)
# Generate a secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# If not set, session data will be stored unencrypted (less secure)
ENCRYPTION_KEY=

# Enable session encryption even without ENCRYPTION_KEY (uses SESSION_ID as key)
ENCRYPT_SESSION=false

# Automatically migrate unencrypted sessions to encrypted format
AUTO_MIGRATE_SESSIONS=true

# ─── MONITORING (Optional - for production deployments) ────────
# Sentry DSN for error tracking and monitoring
# Sign up at https://sentry.io for a free account
SENTRY_DSN=

# ─── DEBUG ─────────────────────────────────────────────────────
DEBUG=false
PROCESS_SELF_MESSAGES=true
# ─── ONBOARDING ──────────────────────────────────────────────────
# Auto-Join Support Group (Link or Code)
AUTO_JOIN_GROUP=
# Auto-Follow Channel (Link or Code)
AUTO_FOLLOW_CHANNEL=

# ─── DATABASE ──────────────────────────────────────────────────
# Leave empty to use local JSON files (Default)
# MongoDB Connection String (e.g. mongodb+srv://...)
MONGO_URL=
# PostgreSQL Connection String (e.g. postgresql://...)
POSTGRES_URL=
